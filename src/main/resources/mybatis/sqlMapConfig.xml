<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd" >
<configuration>

    <settings>
        <setting name="useColumnLabel" value="true"/>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>

    <typeAliases>
        <typeAlias type="com.heyongming.ntwd.entity.PhraseEntity" alias="phraseEntity"></typeAlias>
        <typeAlias type="com.heyongming.ntwd.entity.PhrasePageEntity" alias="phrasePageEntity"></typeAlias>
    </typeAliases>
    <mappers>
        <mapper resource="mybatis/phraseMapper.xml"/>
        <mapper resource="mybatis/phrasePageMapper.xml"/>
    </mappers>
</configuration>